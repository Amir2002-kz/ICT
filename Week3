problem - 1
s=input()
h=""
for i in s:
    if  i.lower()=='a' or i.lower()=='o' or i.lower()=='y'or i.lower()=='e' or i.lower()=='u' or i.lower()=='i':
        continue
    else:
        h+=i.lower()
for i in h:
    print('.'+i,end="")
--------------------------------------------------------------------------------------------------------------------------------------------------------------
problem - 2
n=input()
a=[]
j=0
for i in n:
    if j%2==0:
        a.append(i)
    j+=1
a.sort()
print(a[0],end="")
for i in range(1,len(a)):
    print('+'+a[i],end="")
--------------------------------------------------------------------------------------------------------------------------------------------------------------
problem - 3
n=input()
print(n[0].upper(),end="")
for i in range(1,len(n)):
    print(n[i] ,end="")
--------------------------------------------------------------------------------------------------------------------------------------------------------------
problem - 4
n=input()
j=0
l=0
ok=False
for i in n:
    if i=='1':
        j+=1
        l=0
    else:
        l+=1
        j=0
    if(j>=7 or l>=7):
        ok=True
if ok:
    print("YES")
else:
    print("NO")
--------------------------------------------------------------------------------------------------------------------------------------------------------------
problem - 5
n=input()
t=""
for i in n:
    t+=i
a=set(t)
print("CHAT WITH HER!"if len(a)%2==0 else "IGNORE HIM!")
--------------------------------------------------------------------------------------------------------------------------------------------------------------
problem - 6
n=input()
cnt=0
for i in n:
    if ord(i)>=65 and ord(i)<=90:
        cnt-=1
    else:
        cnt+=1
if cnt<0:
    print(n.upper())
else:
    print(n.lower())
