problem - 10
n=input()
ok=False
cnt=0
for i in n:
    if 90>=ord(i)and ord(i)>=65:
        cnt-=1
    else:
        cnt+=1
if cnt==len(n) or (ord(n[0])>=97 and ord(n[0])<=122 and -1*cnt==len(n)-2) :
    print("Caps")
else:
    print("Lock")
--------------------------------------------------------------------------------------------------------------------------------------------------------------
problem - 11
m=int(input())
n=input()
a=[]
cnt=0
low=0
for i in n:
    a.append(ord(i))
for i in a:
    if i==110:
        cnt+=1
    elif i==122:
        low+=1
        
for i in range(cnt):
    print(1,end=" ")
for i in range(low):
    print(0,end=" ")
# print(ord('o')) - 111
# print(ord('n')) - 110 
# print(ord('e')) - 101
# print(ord('r')) - 114 
# print(ord('z')) - 122
